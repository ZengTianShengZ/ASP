<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dlg_creat_folder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:text="新建文件夹"
        android:textColor="#353535"
        android:textSize="8pt"
        />
    
     <EditText
         android:id="@+id/dlg_creat_folder_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
     
        android:background="@null"
        android:hint="未命名文件夹"
        android:textColor="#353535"
        android:textSize="8pt"
        />

     <View 
         android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5F5FD7"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
     
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <Button
                android:id="@+id/dlg_creat_folder_cancel"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:background="@color/colorOverall"
                 android:layout_marginLeft="20dp"
                android:gravity="center"
               
                android:layout_marginBottom="30dp"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="8pt" />

            <Button
                android:id="@+id/dlg_creat_folder_affirm"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:background="@color/colorOverall"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:padding="0dip"
                android:text="确认"
                android:textColor="#ffffff"
                android:textSize="8pt" />
        </RelativeLayout>
</LinearLayout>
