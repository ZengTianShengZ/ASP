<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/ll_flag"
            >


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_comment_logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            fresco:placeholderImage="@mipmap/ic_logo"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            ></com.facebook.drawee.view.SimpleDraweeView>
        </LinearLayout>
        <TextView
            android:id="@+id/item_comment_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ll_flag"
            android:layout_marginLeft="20dp"
            android:text="曾田生"
            android:textSize="9pt"
            />

        <TextView
            android:id="@+id/item_comment_time_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_comment_nameTv"
            android:layout_toRightOf="@+id/ll_flag"
            android:layout_marginLeft="20dp"
            android:text="今天 18：31 上海"
            android:textSize="7pt"
            />

        <TextView
            android:id="@+id/item_comment_replay_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="回复"
            android:padding="5dp"
            android:background="@drawable/textview_bg"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="9pt"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_comment_content_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="5dp"
        android:text="我的开始觉得世界第三觉得四脚"
        android:textColor="#464545"
        android:textSize="9pt"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4pt"
        android:background="#bebdbd"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="4dp"
        />

</LinearLayout>