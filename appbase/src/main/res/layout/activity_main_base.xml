<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <FrameLayout
        android:id="@+id/main_base_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4pt"
        android:background="@color/colorOverall"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="#fafafa"
        android:orientation="horizontal" >

        <asp.com.appbase.view.BottomTagView
            android:id="@+id/main_base_hong_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTagClick"
            android:padding="8dp"
            app:tagcolor="@color/colorOverall"
            app:tagicon="@mipmap/bottom_hong_btn"
            app:tagsize="10dp"
            app:tagtext="主页" />

        <asp.com.appbase.view.BottomTagView
            android:id="@+id/main_base_new_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTagClick"
            android:padding="8dp"
            app:tagcolor="@color/colorOverall"
            app:tagicon="@mipmap/bottom_new_btn"
            app:tagsize="10dp"
            app:tagtext="推荐" />


        <asp.com.appbase.view.BottomTagView
            android:id="@+id/main_base_me_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTagClick"
            android:padding="8dp"
            app:tagcolor="@color/colorOverall"
            app:tagicon="@mipmap/bottom_me_btn"
            app:tagsize="10dp"
            app:tagtext="我的" />

    </LinearLayout>
</LinearLayout>
