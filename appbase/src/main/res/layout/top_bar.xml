<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_top_bar"
    android:background="@color/colorOverall"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/topbar_back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/ic_meun" />

    <RelativeLayout
        android:id="@+id/title_tv_rel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/title_tv_secondTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二手"
                android:layout_marginLeft="13dp"
                android:textColor="#FFFFFF"
                android:textSize="11pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="13dp"
                android:text="代购"
                android:textColor="#FFFFFF"
                android:textSize="11pt" />

        </LinearLayout>


        <View
            android:id="@+id/top_bar_curcor_view"
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/topbar_search_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/ic_search" />

</RelativeLayout>